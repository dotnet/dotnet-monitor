{
    "files.associations": {
        "*.csproj": "msbuild",
        "*.targets": "msbuild",
        "*.vbproj": "msbuild",
        "*.props": "msbuild",
        "*.resx": "xml"
    },

    "remote.portsAttributes": {
        "52323": {
            "label": "dotnet-monitor"
        },
        "52325": {
            "label": "dotnet-monitor: metrics"
        }
    },

    // ms-dotnettools.csharp settings
    "csharp.format.enable": true,
    "csharp.semanticHighlighting.enabled": true,
    "dotnet.defaultSolution": "dotnet-monitor.sln",
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,

    // ms-dotnettools.csharp settings
    "omnisharp.path": "latest",
    "omnisharp.disableMSBuildDiagnosticWarning": true,
    "omnisharp.useModernNet": true,
    "omnisharp.enableAsyncCompletion": true,
    "omnisharp.enableEditorConfigSupport": true,
    "omnisharp.enableRoslynAnalyzers": true,
    "omnisharp.organizeImportsOnFormat": true,
    "omnisharp.autoStart": true,

    // ms-vscode.powershell settings
    "powershell.promptToUpdatePowerShell": false,
    "powershell.integratedConsole.showOnStartup": false,
    "powershell.startAutomatically": false,

    // streetsidesoftware.code-spell-checker

    // Increase the text buffer size to 1000 characters instead of the default of 500.
    // Parts of our documentation include large text blobs, such as examples of public keys.
    "cSpell.blockCheckingWhenTextChunkSizeGreaterThan": 1000,
    "cSpell.enableFiletypes": [
        "cpp",
        "xml",
        "msbuild",
        "javascript"
    ]
}
