<?xml version="1.0" encoding="utf-8"?>
<Project>
  <Import Project="$(MSBuildThisFileDirectory)..\Directory.Build.targets"/>
  <!--
    Target that adds CustomPackageFile files to the nupkg at the path specified by the PackagePath item metadata.
  -->
  <Target Name="GatherCustomPackageFiles" DependsOnTargets="$(GatherCustomPackageFilesDependsOn)">
    <ItemGroup>
      <_PackageFiles Include="@(CustomPackageFile)">
        <BuildAction>None</BuildAction>
      </_PackageFiles>
    </ItemGroup>
  </Target>
</Project>
